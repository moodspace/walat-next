{{global-navbar path='editor'}}
<div>
  <div class="row no-gutters">
    <div class="col col-md-9 p-3">
      <div class="d-flex align-items-center mb-5">
        <div style="width: 4em;"></div>
        <div class="w-100">
          {{simple-quick-post type='exercise' parent='lesson' parent_id=model.lesson.id}}
        </div>
      </div>
      {{#each model.exercises as |exercise|}}
        {{#if (eq exercise.lesson.id model.lesson.id) }}
          {{#link-to 'exercise' model.lesson.id exercise.id}}
            <div class="d-flex align-items-center mb-3">
              <div class="d-flex justify-content-center noselect" style="width: 4em;">
                <span class="btn-light mr-3">
                  <i class="mdi mdi-dots-vertical"></i>
                </span>
              </div>
              <div class="w-100">
                <div class="card">
                  <div class="card-body pt-0">
                    <div class="d-flex justify-content-between">
                      <div class="h5 card-title mt-3">{{exercise.name}}</div>
                      <div class="card-text">
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            {{/link-to}}
        {{/if}}
      {{/each}}
    </div>
    <div class="col col-md-3 p-3">
      {{global-breadcrumb lesson=model.lesson editable=true}}
    </div>
  </div>
</div>

{{global-modals}}
