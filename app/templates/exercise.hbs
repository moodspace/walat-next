{{global-navbar}}
<div>
  <div class="row no-gutters">
    <div class="col col-md-9 p-3">
      <div class="d-flex align-items-center mb-5">
        <div style="width: 4em;"></div>
        <div class="w-100">
          {{simple-quick-post type='page' parent='exercise' parent_id=model.exercise.id}}
        </div>
      </div>
      {{#sortable-objects sortableObjectList=model.pages sortEndAction='sortEndAction' enableSort=true useSwap=true inPlace=false sortingScope="sortingGroup"}}
        {{#each model.pages as |page|}}
          {{#if (eq page.exercise.id model.exercise.id) }}
            {{#draggable-object dragStartAction='sortStartAction' dragHandle='.noselect' content=page isSortable=true sortingScope="sortingGroup"}}
              <div class="d-flex align-items-center mb-3">
                <div class="d-flex justify-content-center" {{action "toggleSelect" page.id}} style="width: 2em;">
                  <span class="btn text-dark mr-3">
                    <i class="mdi mdi-checkbox-{{if (array-contains selected.pages page.id) 'marked' 'blank'}}-outline"></i>
                  </span>
                </div>
                <div class="d-flex justify-content-center noselect" style="width: 2em;">
                  <span class="btn-light mr-3">
                    <i class="mdi mdi-dots-vertical"></i>
                  </span>
                </div>
                <div class="w-100">
                  {{simple-card type='page' klass=model.klass lesson=model.lesson exercise=model.exercise id=page.id name=page.name}}
                </div>
              </div>
            {{/draggable-object}}
          {{/if}}
        {{/each}}
      {{/sortable-objects}}
    </div>
    <div class="col col-md-3 p-3">
      {{sidebar-template-add hasSelected=hasSelected type='pages'}}
      {{sidebar-overview klass=model.klass lesson=model.lesson exercise=model.exercise editable=true}}
    </div>
  </div>
</div>

{{global-modals}}
