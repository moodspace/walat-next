<div class="dropzone {{if draggedOver 'border-primary' ''}} card" style="height: 5rem;"
    ondrop={{action 'setValueUpload'}}
    ondragover={{action 'handleDragOver'}}
    ondragenter={{action 'handleDragOver'}}
    ondragleave={{action 'handleDragLeave'}}>
  <div class="card-body d-flex justify-content-center align-items-center">
    <div class="h6 m-0">
      Drop file here
    </div>
  </div>
</div>

{{#if imageLoaded}}
  <div class="card mt-3">
    <div class="card-body d-flex justify-content-center align-items-center">
      <img src="{{image}}" style="max-width: 100%; max-height: 600px;">
    </div>
  </div>
{{/if}}
