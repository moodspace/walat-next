{{#if new}}
  <div class="card border-success text-success mb-3 h-100" style="min-height: 150px;" data-toggle="modal" data-target="#addLessonModal">
    <div class="card-body d-flex flex-column justify-content-center align-items-center">
      <h5>
        <i class="mdi mdi-plus"></i>  <!-- plus -->
        Add a new lesson
      </h5>
    </div>
  </div>
{{else}}
  <div class="card border-primary text-primary mb-3 h-100" style="min-height: 150px;">
    <div class="card-body d-flex flex-column justify-content-center align-items-center">
      <h4>{{name}}</h4>
    </div>
    <div class="btn-group d-flex" role="group" aria-label="Basic example">
      <button class="btn btn-primary w-100">
        {{#link-to 'lesson' id}}
          Edit
        {{/link-to}}
      </button>
      <button class="btn btn-danger" {{action 'delete' id}}><i class="mdi mdi-delete"></i></button>
    </div>
  </div>
{{/if}}
