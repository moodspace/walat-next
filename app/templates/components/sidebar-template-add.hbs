<div class="card bg-light mb-3">
  <div class="card-header pt-2 pb-2">
    <span class="nav">Template</span>
  </div>
  <div class="card-body p-4">
      <div class="form-row mb-2">
        <div class="col">
          <div class="form-group form-row mb-0">
            <label class="col-form-label-sm">Name</label>
            <div class="col">
              <input type="text" class="form-control form-control-sm" value={{name}} oninput={{action 'setValueName' value="target.value"}}>
            </div>
          </div>
        </div>
      </div>
      <div class="d-flex justify-content-center">
        {{#if hasSelected}}
          <button type="button" class="btn btn-primary btn-md" {{action 'addTemplate' type}}>Create</button>
        {{else}}
          <button type="button" class="btn btn-primary btn-md" disabled>Create</button>
        {{/if}}
      </div>
  </div>
</div>
